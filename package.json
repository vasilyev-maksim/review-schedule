{
    "name": "review-schedule",
    "version": "1.0.0",
    "description": "Review schedule",
    "main": "public/index.html",
    "scripts": {
        "start": "parcel public/index.html --open",
        "start:prod": "cross-env NODE_ENV=production npm run start",
        "start:staging": "cross-env NODE_ENV=staging npm run start",
        "build": "rm -R -f dist .cache && parcel build public/index.html --no-source-maps",
        "test": "jest --config jest.config.json",
        "test:watch": "jest --watchAll --config jest.config.json",
        "tsc": "tsc --noEmit",
        "tslint": "tslint --project ./package.json",
        "publish:prod": "cross-env NODE_ENV=production npm run build && firebase use prod && firebase deploy",
        "publish:staging": "cross-env NODE_ENV=staging npm run build && firebase use staging && firebase deploy",
        "tools": "ts-node tools/cli.ts"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "classnames": "^2.2.6",
        "colors": "^1.3.3",
        "firebase": "^6.3.5",
        "js-cookie": "^2.2.1",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "moment-range": "^4.0.2",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-responsive": "^7.0.0",
        "react-router-dom": "^5.0.1",
        "semantic-ui": "^2.4.2",
        "semantic-ui-react": "^0.87.3"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/classnames": "^2.2.9",
        "@types/dotenv": "^6.1.1",
        "@types/firebase": "^3.2.1",
        "@types/inquirer": "6.5.0",
        "@types/jest": "^24.0.17",
        "@types/js-cookie": "^2.2.2",
        "@types/lodash": "^4.14.136",
        "@types/moment": "^2.13.0",
        "@types/moment-range": "^3.1.2",
        "@types/ora": "^3.2.0",
        "@types/react": "^16.9.1",
        "@types/react-dom": "^16.8.5",
        "@types/react-responsive": "^3.0.3",
        "@types/react-router-dom": "^4.3.4",
        "@types/semantic-ui": "^2.2.7",
        "cross-env": "^5.2.0",
        "cssnano": "^4.1.10",
        "dotenv": "^8.0.0",
        "dotenv-cli": "^2.0.1",
        "husky": "^3.0.3",
        "inquirer": "^6.5.1",
        "inquirer-autocomplete-prompt": "^1.0.1",
        "jest": "^24.8.0",
        "ora": "^3.4.0",
        "sass": "^1.22.9",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-import-group-ordering": "^2.1.2",
        "tslint-react": "^4.0.0",
        "typescript": "^3.5.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run tsc && npm run tslint"
        }
    }
}
